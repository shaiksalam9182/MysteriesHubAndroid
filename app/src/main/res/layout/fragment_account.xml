<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gradient_up"
    tools:context=".AccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="match_parent">





        <TextView
            android:layout_width="match_parent"
            android:text="Account Details"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_width="match_parent"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:id="@+id/tv_name"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:text="Mobile Number"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:id="@+id/tv_mobile"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:text="Your posts"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:id="@+id/tv_posts_count"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="Change Password"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/bt_change_password"
            android:textColor="@color/gradient_up"
            android:layout_height="wrap_content" />


        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="Change Mobile Number"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:id="@+id/bt_change_mobile_number"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/gradient_up"
            android:layout_height="wrap_content" />



            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:hint="Enter Mobile Number"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:drawableTint="@color/white"
                android:inputType="number"
                android:layout_height="wrap_content" />


            <Button
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:text="Update Mobile Number"
                android:textAllCaps="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/gradient_up"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:hint="Current Password"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:drawableTint="@color/white"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="match_parent"
                android:hint="New Password"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:drawableTint="@color/white"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="Confirm Password"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                android:drawableTint="@color/white"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:text="Update Password"
                android:textAllCaps="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/gradient_up"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>





</FrameLayout>